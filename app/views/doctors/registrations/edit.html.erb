<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2 class="panel-title">Editar Información Personal - <%= resource_name.to_s.humanize %></h2>
      </div>

      <div class="panel-body">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-horizontal", role: "form" }) do |f| %>
          <%= devise_error_messages! %>

          <div class="form-group">
            <%= f.label :email, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.email_field :email, autofocus: true, class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :practice_name, "Título Profesional", class: "col-sm-2  control-label" %>
            <div class="col-sm-10">
              <%= f.text_field :practice_name, autofocus: true, class: "form-control", placeholder:"ej: Dr. Antonio Perez" %>
            </div>
          </div>

          <div class="row">
            <div class="col-sm-12">
              <div class="form-group">
                <%= f.label :gender, "Genero", class: "col-sm-2 control-label" %>
                <div class="col-sm-4">
                  <span class="option">Masculino </span><%= f.radio_button :gender, "m" %></br>
                  <span class="option">Femenino </span><%= f.radio_button :gender, "f" %></br>
                </div>
              </div>
            </div>
          </div>
          <!--
          <div class="form-group">
            <%= f.label :gender, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.text_field :gender, autofocus: true, class: "form-control" %>
            </div>
          </div> -->

          <div class="form-group">
            <%= f.label :Work_address,"Dirección de Trabajo", class: "col-sm-2 control-label" %>
            <div class="col-sm-6">
              <%= f.text_field :street_address_work, autofocus: true, class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :City, "Ciudad", class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.text_field :city_work, autofocus: true, class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :Zipcode,"Código Postal", class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.number_field :zip_work, autofocus: true, class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :Mobile_number, "Celular", class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.phone_field :phone_mobile, autofocus: true, class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :Work_number,"Telefono de Oficina", class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.phone_field :phone_work, autofocus: true, class: "form-control" %>
            </div>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div class="form-group">
              <div class="col-sm-10 col-sm-offset-2">
                <p class="help-block">
                  Currently waiting confirmation for: <%= resource.unconfirmed_email %>
                </p>
              </div>
            </div>
          <% end %>

          <div class="panel panel-default">
            <div class="panel-heading">
              <!-- <h2 class="panel-title">Editar Información Personal <%= resource_name.to_s.humanize %></h2> -->
              <h2 class="panel-title"><b>Cambiar Contraseña?</b> (dejar en blanco si no es necesario)</h2>
            </div>
            <div class="panel-body">

              <div class="form-group">
                <%= f.label :password,"Nueva Contraseña", class: "col-sm-2 control-label" %>
                <div class="col-sm-10">
                  <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
                  <p class="help-block">
                    <!-- Leave blank if you don't want to change it. -->
                  </p>
                </div>
              </div>

              <div class="form-group">
                <%= f.label :Confirmar_contraseña, class: "col-sm-2 control-label" %>
                <div class="col-sm-10">
                  <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
                </div>
              </div>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :current_password,"Contraseña Actual", class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
              <p class="help-block">
                We need your current password to confirm your changes.
              </p>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-10 col-sm-offset-2">
              <%= f.submit "Actualizar", class: "btn btn-success btn-block" %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-10 col-sm-offset-2">
              <%= link_to "Regresar", :back, class: "btn btn-link btn-block" %>
            </div>
          </div>
        <% end %>

      </div>

      <div class="panel-footer">
        <div class="row">
          <div class="col-sm-2">
            No estas feliz?
          </div>

          <div class="col-sm-10">
            <%= link_to "Cancelar mi cuenta", registration_path(resource_name), data: { confirm: "Estas super seguro?" }, method: :delete, class: "btn btn-danger btn-block" %>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>




