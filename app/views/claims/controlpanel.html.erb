<div class="page-header">
  <h1>
    Lista de Reclamos
    <!-- <a href="/claims/new" class="btn btn-md btn-success">Generar nuevo</a> -->
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">

    <table class="table table-striped table-hover">
      <tr>

        <th>Doctor</th>
        <th>Aseguradora</th>
        <th>Tipo</th>
        <th>Causa</th>
        <th>Fecha de creación</th>
        <th>Última actualización</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>

      <% @claims.each do |claim| %>
      <tr>
        <td><%= claim.doctor_name %></td>
        <td><%= claim.insurance_name %></td>
        <td><%= claim.claim_type %></td>
        <td><%= claim.attention_cause %></td>
        <td><%= claim.created_at.to_date %></td>
        <td><%= claim.updated_at.to_date %></td>
        <td></td>
        <td>
          <a href="/claims/<%= claim.id %>" class="btn btn-primary">Show</a>
          <a href="/delete_claim/<%= claim.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
  </div>
</div>
