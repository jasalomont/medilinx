
<% if @medical_relation.errors.any? %>
<% @medical_relation.errors.full_messages.each do |message| %>
<div class="alert alert-dismissable alert-danger">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  <%= message %>
</div>
<% end %>
<% end %>

<div class="page-header">
  <h3>Aceptar solicitud!? </h3>
</div>


<div class="row">
  <div class="col-md-12">
    <form action="/update_medical_relation/<%= @medical_relation.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <div class="form-group">


        <input type="hidden" id="doctor_id" name="doctor_id" placeholder="Doctor" class="form-control" value="<%= @medical_relation.doctor_id %>">
      </div>

      <!-- Label and input for patient_id -->
      <div class="form-group">

        <input type="hidden" id="patient_id" name="patient_id" placeholder="Patient" class="form-control" value="<%= @medical_relation.patient_id %>">
      </div>

      <!-- Label and input for doctor_id -->
      <div class="form-group">
        <label for="doctor_id" class="control-label">

        </label>
        <h3 class="panel-title"><input type="checkbox" id="permission" name="permission" value="1" <%= "checked" if @medical_relation.permission %>>
          <b>Acepta la solicitud para compartir informaci√≥n con <%= @medical_relation.doctor.practice_name %> ? (Si)</b>
        </h3>
      </div>


      <button class="btn btn-warning">
          Actualizar
      </button>

      <a href="/expediente/paciente" >Cancelar</a>
      <!-- onclick="parent.window.close()" -->
    </form>
  </div>
</div>
