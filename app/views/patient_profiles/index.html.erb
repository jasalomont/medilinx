<% if current_doctor.email == "admindoc@medilinx.net" %>
<div class="page-header">
  <h1>
    Patient profiles
    <a href="/patient_profiles/new" class="btn btn-lg btn-success">New Patient profile</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Curp</th>
        <th>Rfc</th>
        <th>First name</th>
        <th>Last name father</th>
        <th>Last name mother</th>
        <th>Gender</th>
        <th>User</th>
        <th>Phone</th>
        <th>Street address</th>
        <th>City</th>
        <th>State</th>
        <th>Zipcode</th>
        <th>Country</th>
        <th>Birthdate</th>
        <th>Actions</th>
      </tr>

      <% @patient_profiles.each do |patient_profile| %>
      <tr>
        <td><%= patient_profile.curp %></td>
        <td><%= patient_profile.rfc %></td>
        <td><%= patient_profile.first_name %></td>
        <td><%= patient_profile.last_name_father %></td>
        <td><%= patient_profile.last_name_mother %></td>
        <td><%= patient_profile.gender %></td>
        <td><%= patient_profile.user_id %></td>
        <td><%= patient_profile.phone %></td>
        <td><%= patient_profile.street_address %></td>
        <td><%= patient_profile.city %></td>
        <td><%= patient_profile.state %></td>
        <td><%= patient_profile.zipcode %></td>
        <td><%= patient_profile.country %></td>
        <td><%= patient_profile.birthdate %></td>
        <td>
          <a href="/patient_profiles/<%= patient_profile.id %>" class="btn btn-primary">Show</a>
          <a href="/patient_profiles/<%= patient_profile.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_patient_profile/<%= patient_profile.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
<% end %>
