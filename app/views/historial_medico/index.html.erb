<div class="page-header">
  <h2>Historial Medico</h2>
</div>

<div class="container">

  <div class="row">
    <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4 class="">Antecedentes Personales Patológicos
            <a href="/pathologicals/new" class="btn  btn-success"><i class="fa fa-plus" aria-hidden="true"></i></a>
          </h4>
        </div>
        <div class="panel-body">
          <table class="table table-striped table-hover fixed">
            <col width="30px" />
            <col width="30px" />
            <col width="30px" />
            <tr>

              <th>Enfermedad</th>
              <th>Fecha de inicio</th>
              <th></th>
            </tr>

            <% @pathologicals.each do |pathological| %>
            <tr>

              <td><%= pathological.disease %></td>
              <td><%= pathological.start_date %></td>
              <td>

                <a href="/pathologicals/<%= pathological.id %>/edit" class="btn btn-warning">Editar</a>
                <a href="/delete_pathological/<%= pathological.id %>" class="btn btn-danger" rel="nofollow">Eliminar</a>
              </td>
            </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4 class="">
            Antecedentes Personales No Patológicos
            <a href="/non_pathologicals/new" class="btn btn-success"><i class="fa fa-plus" aria-hidden="true"></i></a>
          </h4>
        </div>
        <div class="panel-body">
          <table class="table table-striped table-hover fixed">
            <col width="30px" />
            <col width="30px" />
            <col width="30px" />
            <tr>
              <th>Tipo</th>
              <th>Cantidad</th>
              <th></th>
            </tr>

            <% @non_pathologicals.each do |non_pathological| %>
            <tr>
              <td><%= non_pathological.drug_type %></td>
              <td><%= non_pathological.quantity %></td>
              <td>

                <a href="/non_pathologicals/<%= non_pathological.id %>/edit" class="btn btn-warning">Editar</a>
                <a href="/delete_non_pathological/<%= non_pathological.id %>" class="btn btn-danger" rel="nofollow">Eliminar</a>
              </td>
            </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>


  <div class="row">
    <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4 class="">
            Cirugías realizadas
            <a href="/surgicals/new" class="btn btn-success"><i class="fa fa-plus" aria-hidden="true"></i></a>
          </h4>
        </div>
        <div class="panel-body">
          <table class="table table-striped table-hover fixed">
            <col width="30px" />
            <col width="30px" />
            <col width="30px" />
            <tr>
              <th>Nombre</th>
              <th>Fecha</th>
              <th></th>
            </tr>

            <% @surgicals.each do |surgical| %>
            <tr>

              <td><%= surgical.name %></td>
              <td><%= surgical.date %></td>
              <td>
                <a href="/surgicals/<%= surgical.id %>/edit" class="btn btn-warning">Editar</a>
                <a href="/delete_surgical/<%= surgical.id %>" class="btn btn-danger" rel="nofollow">Eliminar</a>
              </td>
            </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>



  <div class="row">
    <% if current_patient.gender == "masculino" %>
    <!-- true -->
    <%else %>
    <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">

          <h4 class="">
            Antecedentes Gineco-Obstétricos
            <% @pregnancies.each do |pregnancy| %>
            <% if @pregnancy_size == 0%>
            <a href="/pregnancies/new" class="btn btn-success"><i class="fa fa-plus" aria-hidden="true"></i>
              <% else %>
              <a href="/pregnancies/<%= pregnancy.id %>/edit" class="btn btn-warning">Editar</a></a>
              <% end %>
            </h4>
          </div>
          <div class="panel-body">
            <table class="table table-striped table-hover">
              <tr>
                <td>FUM</td>
                <td><%= pregnancy.fum %></td>
              </tr>
              <tr>
                <td>Numero de Embarazo(s)</td>
                <td><%= pregnancy.number %></td>
              </tr>
              <tr>
                <td>Aborto(s)</td>
                <td><%= pregnancy.abortion %></td>
              </tr>
              <tr>
                <td>Cesárea(s)</td>
                <td><%= pregnancy.caesarean %></td>
              </tr>
              <tr>
                <td>Parto(s)</td>
                <td><%= pregnancy.normal %></td>
              </tr>
              <% end %>
            </table>
          </div>
        </div>
        <% end %>

      </div>

      <!-- Adicionales -->
      <div class="col-md-6">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h4 class="">
              Adicionales
                <% @other_backgrounds.each do |other_background| %>
              <% if @other_backgrounds_size == 0%>
              <a href="/other_backgrounds/new" class="btn btn-success"><i class="fa fa-plus" aria-hidden="true"></i></a>
              <% else %>

              <a href="/other_backgrounds/<%= other_background.id %>/edit" class="btn btn-warning">Editar</a>
              <% end %>
            </h4>
          </div>
          <div class="panel-body">
            <table class="table table-striped table-hover">

              <tr>
                <th></th>
                <th></th>
              </tr>
              <tr>
                <th>Perinatales</th>
                <td><%= other_background.perinatal %></td>
              </tr>
              <tr>
                <th>Otros</th>
                <td><%= other_background.other %></td>
              </tr>
              <% end %>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
