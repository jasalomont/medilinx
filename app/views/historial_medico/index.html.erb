<div class="page-header">
  <h2>Historial Medico</h2>
</div>

<div class="container">
<div class="panel panel-default">
  <div class="panel-body">
  <div class="row">

    <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4 class="">
            <p style="text-align:left;">Perfil
              <span style="float:right;"><a href="/patients/edit" class="btn  btn-primary">Editar</i></a></span>
            </p>
          </h4>

        </div>
        <div class="panel-body">
          <h5> <font color="black">Nombre:</font> <%= current_patient.first_name %> <%= current_patient.last_father %> <%= current_patient.last_mother %></h5>
          <p></p>
          <h5><font color="black">Fecha de Nacimiento:</font>
<% if current_patient.birthdate != nil %>
  <%= current_patient.birthdate.strftime("%B")  %> <%= current_patient.birthdate.month%>, <%= current_patient.birthdate.year %> </h5>
<% end %>

        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4 class="">
            <p style="text-align:left;">Antecedentes Personales Patológicos
              <span style="float:right;"><a href="/pathologicals/new" class="btn  btn-success"><i class="fa fa-plus" aria-hidden="true"></i></a></span>
            </p>
          </h4>

        </div>
        <div class="panel-body">
          <table class="table table-striped table-hover fixed">
            <col width="30px" />
            <col width="30px" />
            <col width="30px" />
            <tr>

              <th>Enfermedad</th>
              <th>Fecha de inicio</th>
              <th></th>
            </tr>

            <% @pathologicals.each do |pathological| %>
            <tr>

              <td><%= pathological.disease %></td>
              <td><%= pathological.start_date %></td>
              <td style="text-align:right">

                <a href="/pathologicals/<%= pathological.id %>/edit" class="btn btn-primary">Editar</a>
                <a href="/delete_pathological/<%= pathological.id %>" class="btn btn-danger" rel="nofollow"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
              </td>
            </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4 class="">
            <p style="text-align:left;">Antecedentes Personales No Patológicos
              <span style="float:right;"><a href="/non_pathologicals/new" class="btn  btn-success"><i class="fa fa-plus" aria-hidden="true"></i></a></span>
            </p>

          </h4>
        </div>
        <div class="panel-body">
          <table class="table table-striped table-hover fixed">
            <col width="30px" />
            <col width="30px" />
            <col width="30px" />
            <tr>
              <th>Tipo</th>
              <th>Cantidad</th>
              <th></th>
            </tr>

            <% @non_pathologicals.each do |non_pathological| %>
            <tr>
              <td><%= non_pathological.drug_type %></td>
              <td><%= non_pathological.quantity %></td>
              <td style="text-align:right">

                <a href="/non_pathologicals/<%= non_pathological.id %>/edit" class="btn btn-primary">Editar</a>
                <a href="/delete_non_pathological/<%= non_pathological.id %>" class="btn btn-danger" rel="nofollow"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
              </td>
            </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>




    <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4 class="">
            <p style="text-align:left;">Cirugías realizadas
              <span style="float:right;"><a href="/surgicals/new" class="btn btn-success "><i class="fa fa-plus" aria-hidden="true"></i></a></span>
            </p>
          </h4>
        </div>
        <div class="panel-body">
          <table class="table table-striped table-hover fixed">
            <col width="30px" />
            <col width="30px" />
            <col width="30px" />
            <tr>
              <th>Nombre</th>
              <th>Fecha</th>
              <th></th>
            </tr>

            <% @surgicals.each do |surgical| %>
            <tr>

              <td><%= surgical.name %></td>
              <td><%= surgical.date %></td>
              <td style="text-align:right">
                <a href="/surgicals/<%= surgical.id %>/edit" class="btn btn-primary">Editar</a>
                <a href="/delete_surgical/<%= surgical.id %>" class="btn btn-danger" rel="nofollow"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
              </td>
            </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <% if current_patient.gender == "m" %>
    <!-- true -->
    <%else %>
    <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">

          <h4 class="">
            <p style="text-align:left;">Antecedentes Gineco-Obstétricos

              <% if @pregnancy_size == 0%>
              <span style="float:right;"><a href="/pregnancies/new" class="btn btn-success "><i class="fa fa-plus" aria-hidden="true"></i></a></span>
              <% end %>
            </p>
          </h4>
        </div>
        <div class="panel-body">
          <table class="table table-striped table-hover">
            <% @pregnancies.each do |pregnancy| %>
            <tr>
              <td>FUM</td>
              <td><%= pregnancy.fum %></td>
            </tr>
            <tr>
              <td>Numero de Embarazo(s)</td>
              <td><%= pregnancy.number %></td>
            </tr>
            <tr>
              <td>Aborto(s)</td>
              <td><%= pregnancy.abortion %></td>
            </tr>
            <tr>
              <td>Cesárea(s)</td>
              <td><%= pregnancy.caesarean %></td>
            </tr>
            <tr>
              <td>Parto(s)</td>
              <td><%= pregnancy.normal %></td>
            </tr>
            <tr>
              <td></td>
              <td>  <a href="/pregnancies/<%= pregnancy.id %>/edit" class="btn btn-primary">Editar</a></a></td>
            </tr>
            <% end %>
          </table>
        </div>
      </div>
</div>
      <% end %>



    <!-- Adicionales -->
    <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4 class="">

            <p style="text-align:left;">Información Adicional

              <% if @other_backgrounds_size == 0%>
              <span style="float:right;"><a href="/other_backgrounds/new" class="btn btn-success "><i class="fa fa-plus" aria-hidden="true"></i></a></span>
              <% end %>
            </p>
          </h4>
        </div>
        <div class="panel-body">
          <table class="table table-striped table-hover">
            <% @other_backgrounds.each do |other_background| %>

            <tr>
              <th>Perinatales</th>
              <td><%= other_background.perinatal %></td>
            </tr>
            <tr>
              <th>Otros</th>
              <td><%= other_background.other %></td>
            </tr>
            <tr>
              <td></td>
              <td><a href="/other_backgrounds/<%= other_background.id %>/edit" class="btn btn-primary">Editar</a></td>
            </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
</div>
