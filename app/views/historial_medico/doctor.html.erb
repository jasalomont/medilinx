<% if current_doctor != nil %>


<div class="page-header">
  <div class="container">
    <div class="row col-md-6">
      <div class="panel panel-default">
        <!-- <div class="panel-heading">
        <h4 class="">
        <p style="text-align:left;">Perfil
        <span style="float:right;"><a href="/patients/edit" class="btn btn-sm btn-primary">Editar</i></a></span>
      </p>
    </h4>
  </div> -->
  <div class="panel-body">
    <div class="col-md-4">
      <td align="center"><%= image_tag("general/pat_icon.png", width:"100px" ) %></td>
    </div>
    <div class="col-md-8">
      <h5> <font color="black">Nombre:</font> <%= @patient.first_name %> <%= @patient.last_father %> <%= @patient.last_mother %></h5>
      <p></p>
      <h5> <font color="black">Sexo:</font> <% if @patient.gender == "m" %>
        Masculino
        <% else %>
        Femenino
        <% end %> </h5>
        <p></p>
        <h5><font color="black">Fecha de Nacimiento:</font>
          <% if @patient.birthdate != nil %>
          <%= @patient.birthdate.strftime("%B")  %> <%= @patient.birthdate.month%>, <%= @patient.birthdate.year %> </h5>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>
</div>



<div class="container">
  <div class="panel panel-default">
    <div class="panel-body">
      <div class="row">



          <div class="col-md-12">
            <div class="panel panel-default">
              <div class="panel-heading">
                <h4 class="">
                  <p style="text-align:left;">Antecedentes Personales Patológicos
                    <span style="float:right;"><a href="/pathologicals/new/<%= @patient.id %>" class="btn btn-sm btn-success" ><i class="fa fa-plus" aria-hidden="true"></i></a></span>
                  </p>
                </h4>

              </div>
              <div class="panel-body col-md-6">
                <table class="table table-striped table-hover fixed">
                  <col width="40px" />
                  <col width="30px" />
                  <col width="20px" />
                  <tr>

                    <!-- <th>Enfermedad</th>
                    <th>Fecha de inicio</th>
                    <th></th> -->
                  </tr>

                  <% @pathologicals.each do |pathological| %>
                  <tr>
                    <% if pathological.doctor_id == current_doctor.id %>
                    <!-- true -->
                    <td><a href="/pathologicals/<%= pathological.id %>/edit" ><%= pathological.disease %></a></td>
                    <td><%= pathological.start_date %></td>
                    <td style="text-align:right">
                      <a href="/delete_pathological/<%= pathological.id %>" style="color:red" rel="nofollow" title="Eliminar registro"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
                    </td>
                    <% else %>
                    <td><%= pathological.disease %></td>
                    <td><%= pathological.start_date %></td>
                    <td style="color:red; text-align:right" title="Registro no editable"><i class="fa fa-ban" aria-hidden="true"></i> </td>
                    <% end %>
                  </tr>
                  <% end %>
                </table>
              </div>
            </div>
          </div>

          <div class="col-md-12">
            <div class="panel panel-default">
              <div class="panel-heading">
                <h4 class="">
                  <p style="text-align:left;">Antecedentes Personales No Patológicos
                    <span style="float:right;"><a href="/non_pathologicals/new/<%= @patient.id %>" class="btn btn-sm btn-success"><i class="fa fa-plus" aria-hidden="true"></i></a></span>
                  </p>

                </h4>
              </div>
              <div class="panel-body col-md-6">
                <table class="table table-striped table-hover fixed">
                  <col width="30px" />
                  <col width="30px" />
                  <col width="30px" />
                  <tr>
                    <!-- <th>Clasificación</th>
                    <th>Detalles</th>
                    <th></th> -->
                  </tr>

                  <% @non_pathologicals.each do |non_pathological| %>
                  <tr>
                    <% if non_pathological.doctor_id == current_doctor.id %>
                    <td><a href="/non_pathologicals/<%= non_pathological.id %>/edit"><%= non_pathological.drug_type %></a></td>
                    <td><%= non_pathological.quantity %></td>
                    <td style="text-align:right">
                      <a href="/delete_non_pathological/<%= non_pathological.id %>" style="color:red" rel="nofollow" title="Eliminar Registro"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
                    </td>
                    <% else %>
                    <td><%= non_pathological.drug_type %></td>
                    <td><%= non_pathological.quantity %></td>
                    <td style="color:red; text-align:right" title="Registro no editable"><i class="fa fa-ban" aria-hidden="true"></i> </td>
                  </tr>

                  <% end %>
                  <% end %>
                </table>
              </div>
            </div>
          </div>
        </div>
        <div class="row">



          <div class="col-md-12">
            <div class="panel panel-default">
              <div class="panel-heading">
                <h4 class="">
                  <p style="text-align:left;">Cirugías realizadas
                    <span style="float:right;"><a href="/surgicals/new/<%= @patient.id %>" class="btn btn-sm btn-success "><i class="fa fa-plus" aria-hidden="true"></i></a></span>
                  </p>
                </h4>
              </div>
              <div class="panel-body col-md-6">
                <table class="table table-striped table-hover fixed">
                  <col width="30px" />
                  <col width="30px" />
                  <col width="30px" />
                  <tr>
                    <!-- <th>Cirugía</th>
                    <th>Fecha</th>
                    <th></th> -->
                  </tr>

                  <% @surgicals.each do |surgical| %>
                  <tr>
                    <% if surgical.doctor_id == current_doctor.id %>
                    <td><a href="/surgicals/<%= surgical.id %>/edit"><%= surgical.name %></a></td>
                    <td><%= surgical.date %></td>
                    <td style="text-align:right">
                      <a href="/delete_surgical/<%= surgical.id %>" style="color:red"rel="nofollow"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
                    </td>
                    <% else %>
                    <td><%= surgical.name %></td>
                    <td><%= surgical.date %></td>
                    <td style="color:red; text-align:right" title="Registro no editable"><i class="fa fa-ban" aria-hidden="true"></i> </td>
                  </tr>

                  <% end %>
                  <tr>


                  </tr>
                  <% end %>
                </table>
              </div>
            </div>
          </div>
        </div>

        <div class="row">
          <% if @patient.gender == "m" %>
          <!-- true -->
          <%else %>
          <div class="col-md-12">
            <div class="panel panel-default">
              <div class="panel-heading">

                <h4 class="">
                  <p style="text-align:left;">Antecedentes Gineco-Obstétricos

                    <% if @pregnancy_size == 0%>
                    <span style="float:right;"><a href="/pregnancies/new/<%= @patient.id %>" class="btn btn-sm btn-success "><i class="fa fa-plus" aria-hidden="true"></i></a></span>
                    <% end %>
                  </p>
                </h4>
              </div>
              <div class="panel-body col-md-4">
                <table class="table table-striped table-hover">
                  <% @pregnancies.each do |pregnancy| %>
                  <tr>
                    <td>FUM</td>
                    <td><%= pregnancy.fum %></td>
                  </tr>
                  <tr>
                    <td>Numero de Embarazo(s)</td>
                    <td><%= pregnancy.number %></td>
                  </tr>
                  <tr>
                    <td>Aborto(s)</td>
                    <td><%= pregnancy.abortion %></td>
                  </tr>
                  <tr>
                    <td>Cesárea(s)</td>
                    <td><%= pregnancy.caesarean %></td>
                  </tr>
                  <tr>
                    <td>Parto(s)</td>
                    <td><%= pregnancy.normal %></td>
                  </tr>
                  <tr style="background-color:white">
                    <td><a href="/pregnancies/<%= pregnancy.id %>/edit" class="btn btn-sm btn-primary">Editar</a></td>
                    <td> </td>
                  </tr>
                  <% end %>
                </table>
              </div>
            </div>
          </div>
          <% end %>



          <!-- Adicionales -->
          <div class="col-md-12">
            <div class="panel panel-default">
              <div class="panel-heading">
                <h4 class="">

                  <p style="text-align:left;">Información Adicional

                    <% if @other_backgrounds_size == 0%>
                    <span style="float:right;"><a href="/other_backgrounds/new/<%= @patient.id %>" class="btn btn-sm btn-success "><i class="fa fa-plus" aria-hidden="true"></i></a></span>
                    <% end %>
                  </p>
                </h4>
              </div>
              <div class="panel-body col-md-6">
                <table class="table">
                  <% @other_backgrounds.each do |other_background| %>

                  <tr>
                    <th>Registros Perinatales:</th>
                    <td><%= other_background.perinatal %></td>
                  </tr>
                  <tr>
                    <th>Otros Registros:</th>
                    <td><%= other_background.other %></td>
                  </tr>
                  <tr style="background-color:white">
                    <td><a href="/other_backgrounds/<%= other_background.id %>/edit" class="btn btn-sm btn-primary">Editar</a></td>
                    <td></td>
                  </tr>
                  <% end %>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<% end %>
