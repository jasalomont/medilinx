<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title></title>

</head>
<body>
  <div class="page-header">
    <h3><%= @doctor.practice_name %></h3>
  </div>


<h4>Record History</h4>
      <div class="row">
        <div class="col-md-12">
          <table class="table table-striped table-hover">
            <tr>
              <th>Date</th>
              <th>Diagnose</th>
              <th>Weight</th>
              <th>Treatment</th>
              <th>Actions</th>
            </tr>

            <% @events.where("doctor_id" => @doctor.id).each do |event| %>
            <tr>
              <td><%= event.created_at.to_date%></td>
              <td><%= event.diagnose %></td>
              <td><%= event.weight %></td>
              <td><%= event.treatment %></td>
              <td>
                <a href="/events/<%= event.id %>" class="btn btn-primary">Show</a>

              </td>
            </tr>
            <% end %>
          </table>
        </div>
      </div>
      <div >
        <h3>Doctor's Contact Information</h3>
      </div>
  <dl class="dl-horizontal">
    <dt>Name</dt>
    <dd><%= @doctor.practice_name%></dd>
    <dt>Mobile Phone</dt>
    <dd><%= @doctor.phone_mobile %></dd>
    <dt>Office Phone</dt>
    <dd><%= @doctor.phone_work %></dd>
    <dt>Address</dt>
    <dd><%= @street_address %></dd>
    <dt>City</dt>
    <dd><%= @doctor.city_work %></dd>

  
      <dt>Map</dt>
    <dd>

      <!-- Code for Google Map -->
      <div class="row">
        <iframe
          width="600"
          height="450"
          frameborder="0" style="border:0"
          src="https://www.google.com/maps/embed/v1/place?key=AIzaSyAqR7RmmqU2var6sGPxY7SBHbzprKpHbrA&q=<%= @street_address.gsub(' ', '+') %>" allowfullscreen>
        </iframe>
      </div>

