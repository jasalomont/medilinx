<!-- Validation failure messages -->
<% if @broker_relation.errors.any? %>
<% @broker_relation.errors.full_messages.each do |message| %>
<div class="alert alert-dismissable alert-danger">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  <%= message %>
</div>
<% end %>
<% end %>

<div class="page-header">
  <h3>Ficha de Cliente: <%= @broker_relation.patient.first_name + " " + @broker_relation.patient.last_father  %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_broker_relation/<%= @broker_relation.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for insurance_company -->
      <div class="form-group">
        <label for="insurance_company" class="control-label">
          Insurance company
        </label>

        <input type="text" id="insurance_company" name="insurance_company" placeholder="Insurance company" class="form-control" value="<%= @broker_relation.insurance_company %>">
      </div>



      <!-- Label and input for broker_notes -->
      <div class="form-group">
        <label for="broker_notes" class="control-label">
          Notas personales del Cliente
        </label>

          <textarea id="broker_notes" name="broker_notes" placeholder="" class="form-control" rows="3"><%= @broker_relation.broker_notes %></textarea>

        </div>

        <!-- Label and input for contract_code -->
        <div class="form-group">
          <label for="contract_code" class="control-label">
            Contract code
          </label>

          <input type="text" id="contract_code" name="contract_code" placeholder="Contract code" class="form-control" value="<%= @broker_relation.contract_code %>">
        </div>

        <button class="btn btn-warning">
          Actualizar
        </button>
        <a href="/directorio_agentes" class="">
          Regresar
        </a>
      </form>
    </div>
  </div>
