    <% else %>
    <div class="col-md-12">
      <br>
      <div class="col-md-12 align=center">
        <table class="table userbox">
          <td align="center"> <%= image_tag("general/Logo3.png", width:"250px" ) %></td>
        </table>
      </div>

      <table class="table userbox">
