          <td align="center"><%= image_tag("general/ins_icon.png", width:"100px" ) %></td>
        </tr>
        <tr>

          <td align="center"><a href="/patients/sign_in"> Paciente </a></li></td>
          <td align="center"><a href="/doctors/sign_in"> Doctor  </a></li></td>
          <td align="center"><a href="/insurers/sign_in"> Aseguradora  </a></li></td>
        </tr>
      </table>

    </div>

    <% end %>

  </div>
</body>
</html>
