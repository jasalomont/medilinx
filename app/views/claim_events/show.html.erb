<div class="page-header">
  <h3>Claim Event #<%= @claim_event.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Patient</dt>
      <dd><%= @claim_event.patient_id %></dd>

      <dt>Insurer</dt>
      <dd><%= @claim_event.insurer_id %></dd>

      <dt>Insurance name</dt>
      <dd><%= @claim_event.insurance_name %></dd>

      <dt>Permission broker</dt>
      <dd><%= @claim_event.permission %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/claim_events" class="btn btn-primary">
        Back
      </a>
      <a href="/claim_events/<%= @claim_event.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_claim_event/<%= @claim_event.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
