<!-- Validation failure messages -->
<% if @event.errors.any? %>
  <% @event.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Event</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_event" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for patient_id -->
      <div class="form-group">
        <label for="patient_id" class="control-label">
          Patient
        </label>

          <%= select_tag(:patient_id, options_from_collection_for_select(Patient.all, :id, :email, @event.patient_id), :class => "form-control") %>
      </div>

      <!-- Label and input for doctor_id -->
      <div class="form-group">
        <!-- <label for="doctor_id" class="control-label">
          Doctor
        </label> -->

        <input type="hidden" id="doctor_id" name="doctor_id" placeholder="Doctor" class="form-control" value="<%= current_doctor.id %>">
      </div>

      <!-- Label and input for diagnose -->
      <div class="form-group">
        <label for="diagnose" class="control-label">
          Diagnose
        </label>

        <input type="text" id="diagnose" name="diagnose" placeholder="Diagnose" class="form-control" value="<%= @event.diagnose %>">
      </div>

      <!-- Label and input for weight -->
      <div class="form-group">
        <label for="weight" class="control-label">
          Weight
        </label>

        <input type="text" id="weight" name="weight" placeholder="Weight" class="form-control" value="<%= @event.weight %>">
      </div>

      <!-- Label and input for treatment -->
      <div class="form-group">
        <label for="treatment" class="control-label">
          Treatment
        </label>

        <input type="text" id="treatment" name="treatment" placeholder="Treatment" class="form-control" value="<%= @event.treatment %>">
      </div>

      <button class="btn btn-success">
        Create Event
      </button>
      or
      <a href="/events">Cancel</a>
    </form>
  </div>
</div>
