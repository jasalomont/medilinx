<% if current_doctor.email == "admindoc@medilinx.net" %>

<div class="page-header">
  <h1>
    Events
    <a href="/events/new" class="btn btn-lg btn-success">New Event</a>
  </h1>
</div>

<%= search_form_for @q do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :doctor_id_eq, "Doctor" %>
    <%= f.text_field :doctor_id_eq, :class => "form-control", :placeholder => "Enter a few characters" %>
  </div>

  <div class="form-group">
    <%= f.label :patient_id_eq, "Paciente" %>
    <%= f.text_field :patient_id_eq  , :class => "form-control", :placeholder => "Year greater than or equal to" %>
  </div>

  <%= f.submit :class => "btn btn-primary btn-block" %>

  <a href="/events" class="btn btn-default btn-block">Clear filters</a>
<% end %>

<br>
<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Patient</th>
        <th>Doctor</th>
        <th>Tipo</th>
        <th>Diagnose</th>
        <th>Treatment</th>
        <th>Actions</th>
      </tr>

      <% @events.each do |event| %>
      <tr>
        <td><%= event.patient_id %></td>
        <td><%= event.doctor_id %></td>
        <td><%= event.encounter_type %></td>
        <td><%= event.diagnose %></td>
        <td><%= event.treatment %></td>
        <td>
          <a href="/events/<%= event.id %>" class="btn btn-primary">Show</a>
          <a href="/events/<%= event.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_event/<%= event.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<% end %>
