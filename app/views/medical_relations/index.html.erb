<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title></title>
</head>

<!-- Doctor Sign in -->
<% if current_doctor != nil %>
<div class="page-header">
  <!-- doctor online true -->
  <h2><%= current_doctor.practice_name %></h2>
</div>

<div class="row">

  <h1>
    <a href="/medical_relations/new" class="btn btn-lg btn-success">Agregar Paciente</a>
  </h1>
  <table class="table table-striped table-hover">
    <tr>
      <th>Paciente</th>
      <th>e-mail</th>
      <th></th>
    </tr>
    <% @medical_relations.where("doctor_id"=>current_doctor.id).each do |medical_relation| %>
    <tr>
      <td><%= medical_relation.patient.first_name %> <%= medical_relation.patient.last_father %></td>
      <td><%= medical_relation.patient.email %></td>
      <td>


        <a href="/medical_relations/<%= medical_relation.id %>" class="btn btn-primary"><i class="fa fa-search-plus" aria-hidden="true"></i></a>

        <!-- <a href="/medical_relations/<%= medical_relation.id %>/edit" class="btn btn-warning">Edit</a> -->
        <a href="/delete_medical_relation/<%= medical_relation.id %>" class="btn btn-danger" rel="nofollow"><i class="fa fa-trash-o" aria-hidden="true"></i>
</a>
      </td>
    </tr>
    <% end %>
  </table>
</div>


<!-- Patient Sign in -->

<%  elsif current_patient != nil %>
<!-- patient online -->
<div class="page-header">
  <!-- doctor online true -->
  <h2><%= current_patient.first_name %>'s Chart</h2>
  <a href="/historial_medico" class="btn btn-primary">Historial Medico</a>
  <a href="/doctors/index" class="btn btn-primary">Lista de Doctores</a>
  <a href="/claims/record" class="btn btn-primary">Reclamos</a>

</div>


<div class="row">


  <table class="table table-striped table-hover">
    <tr>
      <th>Doctor</th>
      <th>Practice</th>
      <th>Actions</th>
    </tr>
    <% @medical_relations.where("patient_id"=>current_patient.id).each do |medical_relation| %>
    <tr>

      <td><%= medical_relation.doctor.practice_name %></td>
      <td>General</td>
      <td>
        <a href="/doctors/<%= medical_relation.doctor_id %>" class="btn btn-primary"><i class="fa fa-search-plus" aria-hidden="true"></i></a>
        <!-- <a href="/medical_relations/<%= medical_relation.id %>/edit" class="btn btn-warning">Edit</a>
        <a href="/delete_medical_relation/<%= medical_relation.id %>" class="btn btn-danger" rel="nofollow">Delete</a> -->
      </td>
    </tr>
    <% end %>
  </table>
</div>

<% else %>
<!-- No one online -->

<div class="">
  <br>

  <table class="table ">
    <tr>
      <td align="center"><%= image_tag("general/pat_icon.png", width:"100px" ) %></td>
      <td align="center"><%= image_tag("general/doc_icon.png", width:"100px" ) %></td>
      <td align="center"><%= image_tag("general/ins_icon.png", width:"100px" ) %></td>
    </tr>
    <tr>

      <td align="center"><a href="/patients/sign_in"> Paciente </a></li></td>

      <td align="center"><a href="/doctors/sign_in"> Doctor  </a></li></td>
      <td align="center"><a href="/"> Aseguradora  </a></li></td>
    </tr>
  </table>

</div>

<% end %>



<body style="background-color:rgb(252,252,252);">




</body>
</html>
