

<% if current_doctor != nil %>
<div class="page-header">
  <!-- doctor online true -->
<h2><%= current_doctor.practice_name %></h2>
</div>

<div class="row">

    <h1>
      <a href="/medical_relations/new" class="btn btn-lg btn-success">Add Patient</a>
    </h1>
    <table class="table table-striped table-hover">
      <tr>
        <th>Patient</th>
        <th>e-mail</th>
        <th>Actions</th>
      </tr>
      <% @medical_relations.where("doctor_id"=>current_doctor.id).each do |medical_relation| %>
      <tr>
<td><%= medical_relation.patient.first_name %> <%= medical_relation.patient.last_father %></td>
        <td><%= medical_relation.patient.email %></td>
        <td>


          <a href="/medical_relations/<%= medical_relation.id %>" class="btn btn-primary">Show</a>

          <!-- <a href="/medical_relations/<%= medical_relation.id %>/edit" class="btn btn-warning">Edit</a> -->
          <a href="/delete_medical_relation/<%= medical_relation.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>

<%  elsif current_patient != nil %>
<!-- patient online -->
<div class="page-header">
  <!-- doctor online true -->
<h2><%= current_patient.first_name %>'s Chart</h2>
</div>

<div class="row">


    <table class="table table-striped table-hover">
      <tr>
        <th>Doctor</th>
        <th>Practice</th>
        <th>Actions</th>
      </tr>
      <% @medical_relations.where("patient_id"=>current_patient.id).each do |medical_relation| %>
      <tr>

        <td><%= medical_relation.doctor.practice_name %></td>
          <td>General</td>
        <td>
          <a href="/doctors/<%= medical_relation.doctor_id %>" class="btn btn-primary">Show</a>
          <!-- <a href="/medical_relations/<%= medical_relation.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_medical_relation/<%= medical_relation.id %>" class="btn btn-danger" rel="nofollow">Delete</a> -->
        </td>
      </tr>
      <% end %>
    </table>

<% else %>
<!-- No one online -->
<table class="table table-striped table-hover">
  <tr>
    <th></th>
    <th></th>
  </tr>
  <tr>
    <td align="center"><a href="/patients/sign_in"> Patient Sign In </a></li></td>
    <td align="center"><a href="/doctors/sign_in"> Doctor Sign In </a></li></td>
  </tr>



  <% end %>
</div>
