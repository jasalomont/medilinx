<!-- Validation failure messages -->
<% if @office_profile.errors.any? %>
  <% @office_profile.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Editar #<%= @office_profile.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_office_profile/<%= @office_profile.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for doctor_id -->
      <div class="form-group">
  <input type="hidden" id="doctor_id" name="doctor_id" placeholder="Doctor" class="form-control" value="<%= @office_profile.doctor_id %>">
      </div>

      <!-- Label and input for patient_id -->
      <div class="form-group">
        <label for="patient_id" class="control-label">
          Nombre(s) paciente
        </label>

        <input type="text" id="patient_id" name="patient_id" placeholder="<%@office_profile.first_name%>" class="form-control" value="<%= @office_profile.first_name %>">
      </div>

      <!-- Label and input for birthdate -->
      <div class="form-group">
        <label for="birthdate" class="control-label">
          Fecha de nacimiento
        </label>

        <input type="text" id="birthdate" name="birthdate" placeholder="" class="form-control" value="<%= @office_profile.birthdate %>">
      </div>

      <!-- Label and input for gender -->
      <div class="form-group">
        <label for="gender" class="control-label">
          Sexo
        </label>

        <br>
        <% if  @office_profile.gender == "f" %>
        <input type="radio" id="gender" name="gender" value="M" > Masculino
        <input type="radio" id="gender" name="gender" value="F" checked="checked"> Femenino

        <% else %>
        <input type="radio" id="gender" name="gender" value="M" checked="checked"> Masculino
        <input type="radio" id="gender" name="gender" value="F"> Femenino
        <% end %>

      </div>

      <!-- Label and input for phone_mobile -->
      <div class="form-group">
        <label for="phone_mobile" class="control-label">
          Celular
        </label>

        <input type="text" id="phone_mobile" name="phone_mobile" placeholder="" class="form-control" value="<%= @office_profile.phone_mobile %>">
      </div>

      <button class="btn btn-warning">
        Actualizar
      </button>

      <a href="/office_profiles/<%= @office_profile.id %>">Cancelar</a>
    </form>
  </div>
</div>
