<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="panel panel-default">
      <div class="panel-heading">
        <!-- <h2 class="panel-title">Editar Información Personal <%= resource_name.to_s.humanize %></h2> -->
        <h2 class="panel-title">Editar Información Personal </h2>
      </div>

      <div class="panel-body">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-horizontal", role: "form" }) do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group">
          <%= f.label :email, class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.email_field :email, autofocus: true, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :first_name, "Nombre(s)", class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
          </div>
        </div>

        <div class="row">
          <div class="col-sm-12">
            <div class="form-group ">
              <%= f.label :last_father, "Paterno", class: "col-sm-2 control-label" %>
              <div class="col-sm-4">
                <%= f.text_field :last_father, autofocus: true, class: "form-control" %>
              </div>

              <%= f.label :last_mother, "Materno", class: "col-sm-2 control-label" %>
              <div class="col-sm-4">
                <%= f.text_field :last_mother, autofocus: true, class: "form-control" %>
              </div>
            </div>
          </div>
        </div>

        <div class="row">

          <div class="col-sm-12">
            <div class="form-group">
              <%= f.label :gender, "Sexo", class: "col-sm-2 control-label" %>
              <div class="col-sm-4">
                <span class="option">Masculino </span><%= f.radio_button :gender, "m" %></br>
                <span class="option">Femenino </span><%= f.radio_button :gender, "f" %></br>
              </div>

              <%= f.label :birthdate, "Fecha de Nacmiento", class: "col-sm-2 control-label" %>
              <div class="col-sm-4 ">
                <%= f.date_field :birthdate, autofocus: true, class: "form-control" %>
                <p class="help-block">
                  (mm/dd/aaaa)
                </p>
              </div>
            </div>
          </div>
        </div>


        <div class="row">
          <div class="col-sm-12">
            <div class="form-group">
              <%= f.label :phone_mobile, "Celular", class: "col-sm-2 control-label" %>
              <div class="col-sm-4">
                <%= f.phone_field :phone_mobile, autofocus: true, class: "form-control" %>
              </div>

              <%= f.label :phone_home, "Tel. Casa", class: "col-sm-2 control-label" %>
              <div class="col-sm-4">
                <%= f.phone_field :phone_home, autofocus: true, class: "form-control" %>
              </div>
            </div>
          </div>
        </div>


        <div class="form-group">
          <%= f.label :street_address, "Dirección", class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.text_field :street_address, autofocus: true, class: "form-control" %>
          </div>
        </div>

        <div class="row">
          <div class="col-sm-12">
            <div class="form-group">
              <%= f.label :country, "País", class: "col-sm-2 control-label" %>
              <div class="col-sm-4">
                <%= f.text_field :country, autofocus: true, class: "form-control" %>
              </div>

              <%= f.label :state, "Estado", class: "col-sm-2 control-label" %>
              <div class="col-sm-4">
                <%= f.text_field :state, autofocus: true, class: "form-control" %>
              </div>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-sm-12">
            <div class="form-group">
              <%= f.label :city, "Ciudad", class: "col-sm-2 control-label" %>
              <div class="col-sm-4">
                <%= f.text_field :phone_mobile, autofocus: true, class: "form-control" %>
              </div>

              <%= f.label :zipcode, "Código Postal", class: "col-sm-2 control-label" %>
              <div class="col-sm-4">
                <%= f.text_field :zipcode, autofocus: true, class: "form-control" %>
              </div>
            </div>
          </div>
        </div>




        <div class="form-group">
          <%= f.label :curp, "CURP", class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.text_field :curp, autofocus: true, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :RFC, "RFC", class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.text_field :rfc, autofocus: true, class: "form-control" %>
          </div>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="form-group">
          <div class="col-sm-10 col-sm-offset-2">
            <p class="help-block">
              Currently waiting confirmation for: <%= resource.unconfirmed_email %>
            </p>
          </div>
        </div>
        <% end %>

        <div class="panel panel-default">
          <div class="panel-heading">
            <!-- <h2 class="panel-title">Editar Información Personal <%= resource_name.to_s.humanize %></h2> -->
            <h2 class="panel-title"><b>Cambiar Contraseña?</b> (dejar en blanco si no es necesario)</h2>
          </div>
          <div class="panel-body">

            <div class="form-group">
              <%= f.label :Contraseña,"Nueva Contraseña", class: "col-sm-2 control-label" %>
              <div class="col-sm-10">
                <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
                <p class="help-block">
                  <!-- Leave blank if you don't want to change it. -->
                </p>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :Confirmar_contraseña, class: "col-sm-2 control-label" %>
              <div class="col-sm-10">
                <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
              </div>
            </div>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :Contraseña,"Contraseña Actual", class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
            <p class="help-block">
              Se requiere ingresar contraseña para confirmar cambios.
            </p>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-10 col-sm-offset-2">
            <%= f.submit "Actualizar", class: "btn btn-success btn-block" %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-10 col-sm-offset-2">
            <%= link_to "Regresar", :back, class: "btn btn-link btn-block" %>
          </div>
        </div>
        <% end %>

      </div>

      <div class="panel-footer">
        <div class="row">
          <div class="col-sm-2">
            No estas feliz?
          </div>

          <div class="col-sm-10">
            <%= link_to "Cancelar mi cuenta", registration_path(resource_name), data: { confirm: "Esta seguro de que desea cancelar su cuenta?" }, method: :delete, class: "btn btn-danger btn-block" %>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
</div>
</div>




