<div class="page-header">
  <h3>Recibo de confirmación de envío  </h3>
  <h4 style="color:gray">Folio #<%= @claim_follow.id %></h4>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">


      <dt>Paciente</dt>
      <dd><%= Patient.find(@claim_follow.patient_id).first_name %> <%= Patient.find(@claim_follow.patient_id).last_father %></dd>

      <dt>Fecha y Hora de envío</dt>
      <dd><%= @claim_follow.created_at %></dd>

      <dt>Doctor</dt>
      <dd></dd>

      <dt>Fecha de firma de documento</dt>
      <dd></dd>

      <dt>Aseguradora</dt>
      <dd><%= @claim_follow.claim_event.insurance_name %></dd>

      <dt>Folio</dt>
      <dd><%= @claim_follow.claim_id %></dd>

      <dt>Status</dt>


      <% if @claim_follow.insurance_approved == true %>
      <dd>Aprobado</dd>
      <% elsif @claim_follow.insurance_approved == false %>
      <dd>Rechazado</dd>
      <% else %>
      <% if @claim_follow.insurance_read == true %>
      <dd>Iniciado el proceso de aprobación</dd>
      <% else %>
      <dd>Enviado</dd>


      <% end %>
      <% end %>

      <dt>Comentarios</dt>
      <dd><%= @claim_follow.insurance_comments %></dd>

    </dl>

    <% if current_patient != nil %>
    <a href="/claims/record" class="btn btn-primary">
      Salir
    </a>
    <% elsif current_insurer != nil %>
    <a href="/claims/controlpanel" class="btn btn-primary">
      Salir
    </a>
    <% end %>
    <a href="/claims/<%= @claim_follow.claim_id %>" class="btn btn-info">
      Ver informe
    </a>
    <!-- <a href="/claim_follows/<%= @claim_follow.id %>/edit" class="btn btn-warning">
    Edit
  </a>
  <a href="/delete_claim_follow/<%= @claim_follow.id %>" class="btn btn-danger" rel="nofollow">
  Delete
</a> -->

</div>
</div>
