<!-- Validation failure messages -->
<% if @pregnancy.errors.any? %>
  <% @pregnancy.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Editar Informaci√≥n de Embarazos</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_pregnancy/<%= @pregnancy.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for patient_id -->
      <div class="form-group">

        <input type="hidden" id="patient_id" name="patient_id" placeholder="Patient" class="form-control" value="<%= current_patient.id %>">
      </div>

      <!-- Label and input for fum -->
      <div class="form-group">
        <label for="fum" class="control-label">
          Fum
        </label>

        <input type="date" id="fum" name="fum" placeholder="Fum" class="form-control" value="<%= @pregnancy.fum %>">
      </div>

      <!-- Label and input for number -->
      <div class="form-group">
        <label for="number" class="control-label">
          Number
        </label>

        <input type="text" id="number" name="number" placeholder="Number" class="form-control" value="<%= @pregnancy.number %>">
      </div>

      <!-- Label and input for abortion -->
      <div class="form-group">
        <label for="abortion" class="control-label">
          Abortion
        </label>

        <input type="text" id="abortion" name="abortion" placeholder="Abortion" class="form-control" value="<%= @pregnancy.abortion %>">
      </div>

      <!-- Label and input for caesarean -->
      <div class="form-group">
        <label for="caesarean" class="control-label">
          Caesarean
        </label>

        <input type="text" id="caesarean" name="caesarean" placeholder="Caesarean" class="form-control" value="<%= @pregnancy.caesarean %>">
      </div>

      <!-- Label and input for normal -->
      <div class="form-group">
        <label for="normal" class="control-label">
          Normal
        </label>

        <input type="text" id="normal" name="normal" placeholder="Normal" class="form-control" value="<%= @pregnancy.normal %>">
      </div>

      <button class="btn btn-warning">
        Update Pregnancy
      </button>
      or
      <a href="/pregnancies/<%= @pregnancy.id %>">Cancel</a>
    </form>
  </div>
</div>
