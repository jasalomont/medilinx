<div class="page-header">
  <h1>
    Surgicals
    <a href="/surgicals/new" class="btn btn-lg btn-success">New Surgical</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Patient</th>
        <th>Name</th>
        <th>Date</th>
        <th>Actions</th>
      </tr>

      <% @surgicals.each do |surgical| %>
      <tr>
        <td><%= surgical.patient_id %></td>
        <td><%= surgical.name %></td>
        <td><%= surgical.date %></td>
        <td>
          <a href="/surgicals/<%= surgical.id %>" class="btn btn-primary">Show</a>
          <a href="/surgicals/<%= surgical.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_surgical/<%= surgical.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
