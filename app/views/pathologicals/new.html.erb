<!-- Validation failure messages -->
<% if @pathological.errors.any? %>
  <% @pathological.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Agregar antecedente patol√≥gico</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_pathological" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for patient_id -->
      <div class="form-group">
        <input type="hidden" id="patient_id" name="patient_id" placeholder="Patient" class="form-control" value="<%= current_patient.id %>">
      </div>

      <!-- Label and input for disease -->
      <div class="form-group col-md-6">
        <label for="disease" class="control-label">
          Enfermedad
        </label>

        <input type="text" id="disease" name="disease" placeholder="Disease" class="form-control" value="<%= @pathological.disease %>">
      </div>

      <!-- Label and input for start_date -->
      <div class="form-group col-md-6">
        <label for="start_date" class="control-label">
          Fecha de Inicio
        </label>

        <input type="date" id="start_date" name="start_date" placeholder="Start date" class="form-control" value="<%= @pathological.start_date %>">
      </div>

      <button class="btn btn-success">
        Create Pathological
      </button>
      or
      <%= link_to "Cancelar", :back %>
      <!-- <a href="/pathologicals">Cancel</a> -->
    </form>
  </div>
</div>
