<div class="page-header">
  <h1>
    Pathologicals
    <a href="/pathologicals/new" class="btn btn-lg btn-success">New Pathological</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Patient</th>
        <th>Disease</th>
        <th>Start date</th>
        <th>Actions</th>
      </tr>

      <% @pathologicals.each do |pathological| %>
      <tr>
        <td><%= pathological.patient_id %></td>
        <td><%= pathological.disease %></td>
        <td><%= pathological.start_date %></td>
        <td>
          <a href="/pathologicals/<%= pathological.id %>" class="btn btn-primary">Show</a>
          <a href="/pathologicals/<%= pathological.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_pathological/<%= pathological.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
