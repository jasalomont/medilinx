<!-- Validation failure messages -->
<% if @credential.errors.any? %>
  <% @credential.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Credential</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_credential" method="post" enctype="multipart/form-data>
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for practice -->
      <div class="form-group">
        <label for="practice" class="control-label">
          Practice
        </label>

        <input type="text" id="practice" name="practice" placeholder="Practice" class="form-control" value="<%= @credential.practice %>">
      </div>

      <!-- Label and input for school -->
      <div class="form-group">
        <label for="school" class="control-label">
          School
        </label>

        <input type="text" id="school" name="school" placeholder="School" class="form-control" value="<%= @credential.school %>">
      </div>

      <!-- Label and input for doctor_id -->
      <div class="form-group">
            <input type="hidden" id="doctor_id" name="doctor_id" placeholder="Doctor" class="form-control" value="<%= current_doctor.id %>">
      </div>

      <!-- Label and input for rfc -->
      <div class="form-group">
        <label for="rfc" class="control-label">
          Rfc
        </label>

        <input type="text" id="rfc" name="rfc" placeholder="Rfc" class="form-control" value="<%= @credential.rfc %>">
      </div>

      <!-- Label and input for curp -->
      <div class="form-group">
        <label for="curp" class="control-label">
          Curp
        </label>

        <input type="text" id="curp" name="curp" placeholder="Curp" class="form-control" value="<%= @credential.curp %>">
      </div>

      <!-- Label and input for expertise -->
      <div class="form-group">
        <label for="expertise" class="control-label">
          Expertise
        </label>

        <input type="text" id="expertise" name="expertise" placeholder="Expertise" class="form-control" value="<%= @credential.expertise %>">
      </div>

      <!-- Label and input for cedula_pro -->
      <div class="form-group">
        <label for="cedula_pro" class="control-label">
          Cedula pro
        </label>

        <input type="text" id="cedula_pro" name="cedula_pro" placeholder="Cedula pro" class="form-control" value="<%= @credential.cedula_pro %>">
      </div>

      <!-- Label and input for languages -->
      <div class="form-group">
        <label for="languages" class="control-label">
          Languages
        </label>

        <input type="text" id="languages" name="languages" placeholder="Languages" class="form-control" value="<%= @credential.languages %>">
      </div>

      <!-- Label and input for about_me -->
      <div class="form-group">
        <label for="about_me" class="control-label">
          About me
        </label>

        <input type="text" id="about_me" name="about_me" placeholder="About me" class="form-control" value="<%= @credential.about_me %>">
      </div>

      <!-- Label and input for photo -->
      <div class="form-group">
        <label for="photo" class="control-label">
          Photo
        </label>
        <input type="text" id="photo" name="photo" placeholder="Photo" class="form-control" value="<%= @credential.photo %>">


      </div>

      <!-- Label and input for cedula_esp -->
      <div class="form-group">
        <label for="cedula_esp" class="control-label">
          Cedula esp
        </label>

        <input type="text" id="cedula_esp" name="cedula_esp" placeholder="Cedula esp" class="form-control" value="<%= @credential.cedula_esp %>">
      </div>

      <button class="btn btn-success">
        Create Credential
      </button>
      or
      <a href="/credentials">Cancel</a>
    </form>
  </div>
</div>
